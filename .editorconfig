# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python
[*.py]
indent_size = 4
max_line_length = 88

# Terraform files
[*.tf]
indent_size = 2

# YAML / YML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
# Markdown仕様上、改行のため残す場合あり
trim_trailing_whitespace = false

# Dockerfile
[Dockerfile*]
indent_size = 2
